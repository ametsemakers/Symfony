{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading mt-4">Modifier article</div>
                <div class="panel-body">
                    {{ form_start(formArticle) }}

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2 mt-4">
                            {{ form_row(formArticle.title, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            {{ form_row(formArticle.body, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            <img src="{{asset('uploads/images/' ~ test)}}" alt="{{test}}" width="400" height="auto" />
                        </div>
                        <div class="col-md-8 col-md-offset-2">
                            {{ form_row(formArticle.image, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            {{ form_row(formArticle.slug, {'attr': {'class': 'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            {{ form_row(formArticle.publish, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-btn fa-user"></i> Enregistrer
                            </button>
                            <a href="{{ path('listArticle') }}" class="btn btn-alarm">
                                <i class="fa fa-btn fa-user"></i> Annuler
                            </a>
                        </div>
                    </div>
                    {{ form_end(formArticle) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}